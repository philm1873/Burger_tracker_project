<form method="post" action="/admin/deals/<%= @deal.id %>">
  <input type="hidden" name="_method" value="put">

  <div>
    <label for="name-field">Deal Name:</label>
    <div>
      <input
      type="text"
      name="name"
      value="<%= @deal.name %>"
      />
    </div>
    <label for="discount-field">Discount:</label>
    <div>
      <input
      type="text"
      name="discount"
      value="<%= @deal.discount %>"
      />
    </div>
    <label for="day-field">Day:</label>
    <div>
      <select name="day">
        <% @days.each do |day| %>
          <option value="<%= day %>" <%= "selected" if day == @deal.day.to_s %>>
          <%= "#{day}" %>
          </option>
        <% end %>
      </select>
    </div>
    <div>
      <label for="eatery-field">Eatery:</label>
      <select name="eatery_id">
        <% @eateries.each do |eatery| %>
          <option value="<%= eatery.id %>" <%= "selected" if eatery.id == @deal.eatery_id %>>
          <%= "#{eatery.name}" %>
          </option>
        <% end %>
      </select>
    </div>
    <div>
      <label for="burger-field">Burger:</label>
      <select name="burger_id">
        <% @burgers.each do |burger| %>
          <option value="<%= burger.id %>" <%= "selected" if burger.id == @deal.burger_id %>>
          <%= "#{burger.name}" %>
          </option>
        <% end %>
      </select>
    </div>
  </div>

  <button>Update Deal</button>
</form>
