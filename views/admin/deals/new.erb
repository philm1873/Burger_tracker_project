<form method="post" action="/admin/deals">

  <div>
    <label for="name-field">Deal Name:</label>
    <div>
      <input
      type="text"
      name="name"
      placeholder="Deal Name"
      required
      />
    </div>
    <label for="discount-field">Discount:</label>
    <div>
      <input
      type="text"
      name="discount"
      placeholder="Discount (multiplier)"
      required
      />
    </div>
    <label for="day-field">Day:</label>
    <select name="day">
      <% @days.each do |day| %>
        <option value="<%= day %>"><%= "#{day}" %></option>
      <% end %>
    </select>
    <label for="eatery-field">Eatery:</label>
    <div>
      <select name="eatery_id">
        <% @eateries.each do |eatery| %>
          <option value="<%= eatery.id %>"><%= "#{eatery.name}" %></option>
        <% end %>
      </select>
    </div>
    <label for="burger-field">Burger:</label>
    <div>
      <select name="burger_id">
        <% @burgers.each do |burger| %>
          <option value="<%= burger.id %>"><%= "#{burger.name}" %></option>
        <% end %>
      </select>
    </div>
  </div>

  <button>Create Deal</button>
</form>
