<section>
  <a href="/admin">Admin Home</a>
</section>

<section>
  <div>
    <tr>
      <th>Burger Name</th>
      <th>Eatery Name</th>
    </tr>
    <% @burgers.each do |burger| %>
    <tr>
      <td><%= burger.name %></td>
      <td><%= burger.find_eatery.name %></td>
      <td><a href="/admin/burgers/<%= burger.id %>/edit">Edit</a></td>
      <td><form method="post" action="/admin/burgers/<%= burger.id %>">
        <input type="hidden" name="_method" value="delete">
        <button>Delete Burger</button>
      </form>
      </td>
    </tr>
    <% end %>
  </div>
  <div>
    <a href="/admin/burgers/new">New Burger</a>
  </div>
</section>
