<div class="admin_index">
  <table id="admin_eateries">
    <tr>
      <th>Eatery Name</th>
    </tr>
    <% @eateries.each do |eatery| %>
    <tr>
      <td><%= eatery.name %></td>
      <td><a href="/admin/eateries/<%= eatery.id %>/edit">Edit</a></td>
      <td><form method="post" action="/admin/eateries/<%= eatery.id %>">
        <input type="hidden" name="_method" value="delete">
        <button>Delete Eatery</button>
      </form>
      </td>
    </tr>
    <% end %>
  </table>
  <div class="admin_button">
    <a href="/admin/eateries/new">New Eatery</a>
  </div>
</div>
